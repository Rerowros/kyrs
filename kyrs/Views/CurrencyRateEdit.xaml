<Page x:Class="kyrs.Views.CurrencyRateEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редактирование курсов валют">

    <Grid Background="#272537">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование курсов валют" 
                   FontSize="24" Foreground="White" Margin="20,20,20,10" 
                   HorizontalAlignment="Center"/>

        <DataGrid x:Name="CurrenciesGrid" Grid.Row="1" AutoGenerateColumns="False" 
                  Margin="20" CanUserAddRows="False" Background="#2E2C45" 
                  Foreground="White" BorderBrush="#8258FA" GridLinesVisibility="Horizontal">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#1F1D30"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10,5"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код валюты" Binding="{Binding Code}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Курс" Binding="{Binding Rate}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
            <Button x:Name="SaveButton" Content="Сохранить изменения" Width="180" Height="35" 
                    Margin="10,0" Background="#8258FA" Foreground="White" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="120" Height="35" 
                    Margin="10,0" Background="#464568" Foreground="White" Click="CancelButton_Click"/>
            <Button x:Name="RefreshButton" Content="Обновить из API" Width="150" Height="35" 
                    Margin="10,0" Background="#464568" Foreground="White" Click="RefreshButton_Click"/>
        </StackPanel>
    </Grid>
</Page>