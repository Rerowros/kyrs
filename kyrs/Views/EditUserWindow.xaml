<Window x:Class="kyrs.Views.EditUserWindow"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Редактирование пользователя" Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Редактирование пользователя" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" />
            <TextBox x:Name="UserName" Width="200" Margin="5" />
            <PasswordBox x:Name="UserPassword" Width="200" Margin="5" />
            <ComboBox x:Name="UserRole" Width="200" Margin="5">
                <ComboBoxItem Content="Кассир" />
                <ComboBoxItem Content="Администратор" />
            </ComboBox>
            <Button Content="Сохранить" Width="200" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Назад" Click="back" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="155,0,5,5"/>
        </StackPanel>
    </Grid>
</Window>